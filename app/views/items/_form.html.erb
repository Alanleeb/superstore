<h1><%= @item.id ? 'Edit Item' : 'Create Item' %></h1>
<hr />
<%= form_for [@department, @item] do |f| %>
<%= f.label :name %>
<%= f.text_area :name, required: true, autofocus: true %>
<br />
<%= f.label :price %>
<%= f.text_area :price, required: true, autofocus: true %>
<br />
<%= f.label :discription %>
<%= f.text_area :discription, required: true %>
<hr />
<%= f.submit%>
<% end %>
